{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "rootDir": "./",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": { // https://github.com/LeDDGroup/typescript-transform-paths
            "@src/*": [
                "src/*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
